<table >
<% var i; for (i=0; i < preguntas.length; i ++) { %>
	<tr>
		<td align="left">
			<%= (i+1)+".  "%><%=preguntas[i].enunciado %><a href="/admin/preguntas/<%= preguntas[i].id %>"><%=  preguntas[i].pregunta %></a>
		</td>
		<%if(session.user) {%>
			<td>
				<a href="/admin/preguntas/<%= preguntas[i].id %>/edit"><button>editar</button></a>
			</td>
			<td>
				<form method="post" action="/admin/preguntas/<%= preguntas[i].id %>?_method=delete">
					<button type="submit" onClick="return confirm('Borrar: <% preguntas[i].pregunta %>');">
						borrar
					</button>
				</form>
			</td>
		<%}%>
	</tr>
<% } %>
</table>
<p>
	<%if(session.user) {%>
		<a href="/admin/preguntas/new"><button type="button">Crear pregunta</button></a>
	<%}%>
</p>
